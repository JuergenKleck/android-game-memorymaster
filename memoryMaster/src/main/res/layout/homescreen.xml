<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:simplyapps="http://info.simplyapps.game.memorymaster.rendering"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/homescreen" >
    
    <info.simplyapps.game.memorymaster.screens.HomeView
        android:id="@+id/homeview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        simplyapps:screenScale="80"
        simplyapps:orientation="false" />
	
    <RelativeLayout
        android:id="@+id/adBannerRelativeLayout"
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
	
</FrameLayout>